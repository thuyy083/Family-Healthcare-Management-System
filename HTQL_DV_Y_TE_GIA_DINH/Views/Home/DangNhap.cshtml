@model HTQL_DV_Y_TE_GIA_DINH.Models.DangNhapViewModel

@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>HTQL dịch vụ y tế gia đình</title>
    @Styles.Render("~/Content/css")
</head>


<body>
    <div class="header">
        <a href="@Url.Action("Index", "Home", new { area = "" })"><img src="~/Content/images/logo.png" id="logo"></a>
        <h1>HỆ THỐNG QUẢN LÝ DỊCH VỤ Y TẾ GIA ĐÌNH</h1>
        <nav>
            <a href="@Url.Action("TrangChu", "Home", new { area = "" })">Trang chủ</a>
        </nav>
    </div>
    <div class="dangnhap">
        <div class="container-xxl py-5">
            <div class="container">
                <div class="bg-light rounded">
                    <div class="row g-0">
                        <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                            <div class="h-100 d-flex flex-column justify-content-center p-5">
                                <h3 class="mb-4">Đăng nhập</h3> <hr />
                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger">@TempData["Error"]</div>
                                }
                                @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="row g-3">
                                        <div class="col-sm-12">
                                            <div class="form-floating">
                                                <label class="form-label">Số căn cước công dân</label>
                                                <br />
                                                <br />
                                                @Html.EditorFor(model => model.SoCCCD, new { htmlAttributes = new { @class = "form-control border-0", @style= "width: 100%" } })


                                                @Html.ValidationMessageFor(model => model.SoCCCD, "", new { @class = "text-danger" })

                                            </div>
                                        </div>

                                        <div class="col-sm-12">
                                            <div class="form-floating">
                                                <label class="form-label">Mật khẩu</label>
                                                <br />
                                                <br>
                                                @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control border-0" })
                                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                        <div class="form-group" style="margin-top:20px">

                                            <input type="submit" value="Đăng nhập" class="btn btn-primary w-100 py-3" />

                                        </div>
                                    </div>





                                }
                            </div>
                        </div>
                        <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s" style="min-height: 400px;">
                            <div class="position-relative h-100">
                                <img class="position-absolute w-100 h-100 rounded" src="~/Content/images/background_login.jpg" style="object-fit: cover;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>