@model HTQL_DV_Y_TE_GIA_DINH.PHAN_CONG_CHAM_SOC

@{
    ViewBag.Title = "ThemPhanCong";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    input {
        max-width: 100%;
    }

    select {
        max-width: 100%;
    }

    .nut {
        background-color: #00b39d;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }

        .nut:hover {
            background-color: #00a48f;
        }
</style>
<div class="container my-2 p-2">
    <h2>Thêm phân công</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row col-md-6 g-2 mx-auto shadow p-4">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="form-label">Chọn hộ gia đình:</label>
                <div>
                    @Html.DropDownListFor(model => model.Ma_HGD, ViewBag.Ma_HGD as IEnumerable<SelectListItem>, "Chọn chủ hộ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Ma_HGD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Chọn bác sĩ:</label>
                <div>
                    @Html.DropDownListFor(model => model.Ma_TK, ViewBag.Ma_TK as IEnumerable<SelectListItem>, "Chọn bác sĩ", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Ma_TK, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Thời gian bắt đầu:</label>
                <div>
                    @Html.EditorFor(model => model.Thoi_Gian_Bat_Dau, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Thoi_Gian_Bat_Dau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Thời gian kết thúc:</label>
                <div>
                    @Html.EditorFor(model => model.Thoi_Gian_Ket_Thuc, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                    @Html.ValidationMessageFor(model => model.Thoi_Gian_Ket_Thuc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 d-flex">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn nut" />
                </div>
            </div>
        </div>
    }

<div>
    <button type="button" onclick="window.location.href='@Url.Action("getListHGD", "QLHGD")'" class="btn nut">Quay lại</button>
</div>
</div>