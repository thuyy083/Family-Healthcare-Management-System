@model HTQL_DV_Y_TE_GIA_DINH.BENH_NHAN

@{
    ViewBag.Title = "CreateBN";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    input {
        max-width: 100%;
    }

    .nut {
        background-color: #00b39d;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }

        .nut:hover {
            background-color: #00a48f;
        }
</style>
<div class="container my-2 p-2">
    <h2>THÊM BỆNH NHÂN MỚI</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row col-md-6 g-2 mx-auto shadow p-4">

            <hr />
            <div class="form_container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="col-12">
                    <label class="form-label">Mã hộ gia đình</label>
                    <div>
                        <input class="form-control" id="Ma_HGD" name="Ma_HGD" type="text" value="@ViewBag.Ma_HGD" readonly />

                        @Html.ValidationMessageFor(model => model.Ma_HGD, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="col-12">
                    <label class="form-label">Họ tên</label>
                    <div>
                        @Html.EditorFor(model => model.Ho_Ten, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ho_Ten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Ngày sinh</label>
                    <div>
                        @Html.EditorFor(model => model.Ngay_Sinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Ngay_Sinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Số CCCD</label>
                    <div>
                        @Html.EditorFor(model => model.So_CCCD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.So_CCCD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Giới tính</label>
                    <div>
                        <div class="checkbox">
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.Gioi_Tinh, true) Nam
                            </label>
                            <label class="radio-inline">
                                @Html.RadioButtonFor(model => model.Gioi_Tinh, false) Nữ
                            </label>
                            @Html.ValidationMessageFor(model => model.Gioi_Tinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Địa chỉ</label>
                    <div>
                        @Html.EditorFor(model => model.Dia_Chi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Dia_Chi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Số điện thoại</label>
                    <div>
                        @Html.EditorFor(model => model.So_Dien_Thoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.So_Dien_Thoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Mật khẩu</label>
                    <div>
                        @Html.EditorFor(model => model.Mat_Khau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mat_Khau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Số BHYT</label>
                    <div>
                        @Html.EditorFor(model => model.So_BHYT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.So_BHYT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm" class="btn nut" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        <button type="button" onclick="window.location.href='@Url.Action("DetailsHGD", "QLHGD", new { id = @ViewBag.Ma_HGD })'" class="btn nut">Quay lại</button>
    </div>
</div>
