@model HTQL_DV_Y_TE_GIA_DINH.DON_GIA_DICH_VU

@{
    ViewBag.Title = "CreateDonGia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    input {
        max-width: 120%;
    }

    .nut {
        background-color: #00b39d;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }

        .nut:hover {
            background-color: #00a48f;
        }
</style>
<div class="container my-2 p-2">
    <h2>Thêm đơn giá</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row col-md-6 g-2 mx-auto shadow p-4">
            <hr />
            <div class="form_container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-12">
                    <label class="form-label">Mã dịch vụ</label>
                    <div>
                        <input class="form-control" id="Ma_Dich_Vu" name="Ma_Dich_Vu" type="text" value="@ViewBag.Ma_Dich_Vu" readonly />

                        @Html.ValidationMessageFor(model => model.Ma_Dich_Vu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <label class="form-label">Đơn giá</label>
                    <div>
                        @Html.EditorFor(model => model.Don_Gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Don_Gia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-12">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <input type="submit" value="Create" class="btn nut" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
