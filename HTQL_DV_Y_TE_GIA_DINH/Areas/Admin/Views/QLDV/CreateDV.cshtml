@model HTQL_DV_Y_TE_GIA_DINH.DICH_VU_CHAM_SOC_NGUOI_BENH


@{
    ViewBag.Title = "CreateDV";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    input {
        max-width: 100%;
    }
    textarea {
        max-width: 100%;
    }
    .nut {
        background-color: #00b39d;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 5px;
    }

        .nut:hover {
            background-color: #00a48f;
        }
</style>

<div class="container my-2 p-2">
    <h3>THÊM DỊCH VỤ MỚI</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row col-md-6 g-2 mx-auto shadow p-4">
            <hr />
            <div class="form_container">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-12">
                    <label class="form-label">Tên dịch vụ:</label>
                    <div>
                        @Html.EditorFor(model => model.Ten_Dich_Vu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Ten_Dich_Vu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-label">Mô tả:</label>
                    @Html.TextAreaFor(model => model.Mo_Ta, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessageFor(model => model.Mo_Ta, "", new { @class = "text-danger" })
                </div>

                <div class="col-12">

                    <label class="form-label">Nơi chăm sóc:</label>
                    <div>
                        @Html.EditorFor(model => model.Noi_Cham_Soc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Noi_Cham_Soc, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Giới tính nhân viên chăm sóc:</label>
                    <div class="checkbox">
                        <label class="radio-inline">
                            @Html.RadioButtonFor(model => model.Gioi_Tinh_Cua_Nhan_Vien_Cham_Soc, true) Nam
                        </label>
                        <label class="radio-inline">
                            @Html.RadioButtonFor(model => model.Gioi_Tinh_Cua_Nhan_Vien_Cham_Soc, false) Nữ
                        </label>
                        @Html.ValidationMessageFor(model => model.Gioi_Tinh_Cua_Nhan_Vien_Cham_Soc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 d-flex">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        <input type="submit" value="Thêm" class="btn nut" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    <br />
    <button type="button" onclick="window.location.href='@Url.Action("getListDV", "QLDV")'" class="btn nut">Quay lại</button>
</div>
