@model HTQL_DV_Y_TE_GIA_DINH.BENH_NHAN
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>HTQL dịch vụ y tế gia đình</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <style>
        .capnhat {
            text-decoration: none;
            color: #008a6e;
            font-weight: bold;
        }
    </style>
    <div class="header">
        <a href="@Url.Action("Index", "BenhNhanHome")"><img src="~/Content/images/logo.png" id="logo" /></a>
        <h1>HỆ THỐNG QUẢN LÝ DỊCH VỤ Y TẾ GIA ĐÌNH</h1>
        <nav>
            <a href="@Url.Action("Index", "BenhNhanHome", new { area = "BenhNhan" })">Trang chủ</a>

            <a href="#" onclick="confirmLogout()">Thoát</a>
            <h6 id="user">
                @if (Model != null)
                {
                    @Model.Ho_Ten
                }
            </h6>
        </nav>
    </div>
    <div class="container">
        <div class="border">
            <div class="row">
                <div class="col">
                    <table class="table" cellspacing="0" cellpadding="0">
                        <thead class="table-dark">
                            <h4>QUẢN LÝ THÔNG TIN</h4>
                        </thead>
                        <tbody>
                            <tr>
                                <td width="30%" class="border">
                                    <div class="bg">Mã Bệnh nhân</div>
                                </td>
                                <td width="70%" class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.Ma_TK
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="border">
                                    <div class="bg">Họ và tên</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.Ho_Ten
                                        }
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td class="border">
                                    <div class="bg">Số bản hiểm y tế</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.So_BHYT
                                        }
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td class="border">
                                    <div class="bg">Ngày sinh</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.Ngay_Sinh.ToString("dd/MM/yyyy")
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="border">
                                    <div class="bg">Số căn cước công dân</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.So_CCCD
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="border">
                                    <div class="bg">Giới tính</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @(Model.Gioi_Tinh ? "Nam" : "Nữ")
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td class="border">
                                    <div class="bg">Số điện thoại</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.So_Dien_Thoai
                                        }
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td class="border">
                                    <div class="bg">Địa chỉ</div>
                                </td>
                                <td class="border">
                                    <div>
                                        @if (Model != null)
                                        {
                                            @Model.Dia_Chi
                                        }
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                    <div class="text-center">
                        <a class="capnhat" href="@Url.Action("SuaThongTin", "BenhNhanHome", new { MaTK = Model.Ma_TK })">Cập nhật thông tin</a>
                    </div>
                </div>
                <div class="col">
                    <table class="table1" cellspacing="0" cellpadding="0">
                        <tbody>
                            <tr>
                                <td>
                                    <div>
                                        <a href="@Url.Action("getListLCS", "SuDungDV")"><img class="icon" src="~/Content/images/datlich.png"></a>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <a href="@Url.Action("ds_ThanhVienGD", "SuDungDV")"><img class="icon" src="~/Content/images/hgd.png"></a>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="title">Đặt lịch chăm sóc người bệnh</div>
                                </td>
                                <td>
                                    <div class="title">Xem các thành viên trong gia đình</div>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="footer">
        <p class="top">Hệ thống quản lý dịch vụ y tế gia đình</p>
        <p class="bottom">Điện thoại: 0123456789; Email: htqldichvuytegiadinh@gmail.com.</p>

    </div>
</body>
</html>
<script>
    function confirmLogout() {
        var result = confirm("Bạn có chắc chắn muốn thoát không?");
        if (result) {
            window.location.href = "@Url.Action("DangXuat", "Home", new { area = "" })";
        }
    }
</script>