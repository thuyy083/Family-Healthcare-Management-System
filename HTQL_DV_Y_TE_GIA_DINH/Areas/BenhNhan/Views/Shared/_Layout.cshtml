
@{
    ViewBag.Title = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <title>HTQL dịch vụ y tế gia đình</title>
    @Styles.Render("~/Content/css")
</head>

<body>
    <div class="header">
        <a href="@Url.Action("Index", "BenhNhanHome", new { area = "BenhNhan" })"><img src="~/Content/images/logo.png" id="logo"></a>
        <h1>HỆ THỐNG QUẢN LÝ DỊCH VỤ Y TẾ GIA ĐÌNH</h1>
        <nav>
            <a href="@Url.Action("Index", "BenhNhanHome", new { area = "BenhNhan" })">Trang chủ</a>
            <a href="#" onclick="confirmLogout()">Thoát</a>
            <h6 id="user">@Session["TenTaiKhoan"]</h6>
        </nav>
    </div>
    <div class="container">

        @RenderBody()

    </div>
    <div class="footer">
        <p class="top">Hệ thống quản lý dịch vụ y tế gia đình</p>
        <p class="bottom">Điện thoại: 0123456789; Email: htqldichvuytegiadinh@gmail.com.</p>

    </div>
</body>

</html>

<script>
    function confirmLogout() {
        var result = confirm("Bạn có chắc chắn muốn thoát không?");
        if (result) {
            window.location.href = "@Url.Action("DangXuat", "Home", new { area = "" })";
        }
    }
</script>


